<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/file_manger_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gallery_item_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_filechooser_column_width"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/gallery_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/gallery_item_number"
        android:maxLines="1"
        android:padding="4dp"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/gallery_item_video_icon"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:paddingStart="5dp"
        android:scaleType="fitStart"
        android:src="@drawable/ic_video" />

    <TextView
        android:id="@+id/gallery_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:maxLines="1"
        android:padding="4dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white" />
</RelativeLayout>